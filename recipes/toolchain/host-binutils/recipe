# Description: host toolchain binutils
# Maintainer: itsmanjeet@rlxos.dev

name=host-binutils
version=2.35
release=1
source="https://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz"

build() {
	cd binutils-$version
	
	mkdir -p build
	cd build

	../configure --prefix=$RLX/cross-tools 	\
				--target=${RLX_TGT}			\
				--with-sysroot=${RLX}/cross-tools/${RLX_TGT} \
				--disable-nls			\
				--disable-multilib

	make configure-host
	make
	make install DESTDIR=$pkg
}
