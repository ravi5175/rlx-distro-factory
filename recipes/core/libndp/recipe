# Description: Wrapper for IPv6 Neighbor Discovery Protocol
# URL: http://libndp.org/

name=libndp
version=1.7
release=1
source="http://libndp.org/files/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr        \
	            --sysconfdir=/etc    \
	            --localstatedir=/var \
	            --disable-static
	make
	make DESTDIR=$pkg install
}
