# Description: Sound system for POSIX OSes
# Depends on: vala glib gdbm libcap libx11 libxcb libice libsm libxtst libsndfile dbus libtool speexdsp alsa-lib eudev libressl perl-xml-parser

name=pulseaudio
version=13.0
release=1
source="https://www.freedesktop.org/software/pulseaudio/releases/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure --prefix=/usr \
                    --sysconfdir=/etc \
		    --libexecdir=/usr/lib \
                    --localstatedir=/var \
                    --disable-bluez4 \
                    --disable-bluez5 \
                    --disable-rpath
	make
	make DESTDIR=$pkg install

        # remove the D-Bus configuration file for the system wide daemon to avoid creating unnecessary system users and groups
	rm -fv $pkg/etc/dbus-1/system.d/pulseaudio-system.conf
}
