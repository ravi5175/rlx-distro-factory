# Description: FFmpeg is a solution to record, convert and stream audio and video
# URL: https://ffmpeg.org/
# Depends on: libva libvdpau libx11 bzip2 zlib gnutls libvpx xz fdk-aac lame opus libtheora libvorbis x264 x265 libxcb alsa-lib sdl2 libxv libxext libass freetype2

name=ffmpeg
version=4.3.1
release=1
source="https://ffmpeg.org/releases/$name-$version.tar.xz"

build() {
	cd $name-$version

	# adds the ALSA library to the Flite LDFLAGS variable and
	# enables the discovery of Flite
	sed -i 's/-lflite"/-lflite -lasound"/' configure

	./configure --prefix=/usr        \
	            --enable-gpl         \
		    --enable-gnutls      \
	            --enable-version3    \
	            --enable-nonfree     \
	            --disable-static     \
	            --enable-shared      \
	            --disable-debug      \
	            --enable-libass      \
	            --enable-libfdk-aac  \
	            --enable-libfreetype \
	            --enable-libmp3lame  \
	            --enable-libopus     \
	            --enable-libtheora   \
	            --enable-libvorbis   \
	            --enable-libvpx      \
	            --enable-libx264     \
	            --enable-libx265
	make
	gcc tools/qt-faststart.c -o tools/qt-faststart
	make DESTDIR=$pkg install

	install -m755 tools/qt-faststart $pkg/usr/bin
}

