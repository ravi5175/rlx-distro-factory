# Description: Xfce4 Panel
# Depends on: gobject-introspection vala xfconf libxfce4ui gtk3 glib libxfce4util cairo gdk-pixbuf pango harfbuzz atk exo garcon libsm libice libx11 libwnck3 libxext gtk2 fontconfig freetype2

name=xfce4-panel
version=4.15.4
release=1
source="https://archive.xfce.org/src/xfce/xfce4-panel/${version%.*}/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure --prefix=/usr --sysconfdir=/etc --enable-gtk3 --disable-nls
	make
	make DESTDIR=$pkg install
}
