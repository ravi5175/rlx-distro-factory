# Description: Shows information about local weather in the xfce4 panel
# URL: https://goodies.xfce.org/projects/panel-plugins/xfce4-weather-plugin
# Depends on: upower xfce4-panel glib libxfce4ui libxfce4util gtk3 pango harfbuzz atk cairo gdk-pixbuf libxml2 libsoup

name=xfce4-weather-plugin
version=0.10.1
release=1
source="http://archive.xfce.org/src/panel-plugins/xfce4-weather-plugin/${version%.*}/xfce4-weather-plugin-$version.tar.bz2"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--disable-debug \
		--disable-nls
	make
	make DESTDIR=$pkg install
}
