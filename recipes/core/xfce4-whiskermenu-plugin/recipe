# Description: Alternate menu for Xfce4
# URL: https://gottcode.org/xfce4-whiskermenu-plugin/
# Depends on: gtk3 cairo gdk-pixbuf glib exo libxfce4util garcon xfce4-panel libxfce4ui cmake

name=xfce4-whiskermenu-plugin
version=2.3.5
release=1
source="http://archive.be.xfce.org/src/panel-plugins/xfce4-whiskermenu-plugin/${version%.*}/xfce4-whiskermenu-plugin-$version.tar.bz2"

build() {
	cd $name-$version

	mkdir -p build
	cd build

	cmake .. \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-GNinja
	ninja
	DESTDIR=$pkg ninja install
}
