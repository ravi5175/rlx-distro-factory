# Description: A set of plug-ins considered by the GStreamer developers to have good quality code, correct functionality, and the preferred license
# URL: https://gstreamer.freedesktop.org/
# Depends on: gstreamer glib gst-plugins-base gdk-pixbuf libjpeg-turbo libgudev flac zlib libx11 libxext libxfixes libxdamage libsoup bzip2 libvpx cairo gtk3 libpng

name=gst-plugins-good
version=1.18.0
release=2
source="https://gstreamer.freedesktop.org/src/$name/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
        cd build

        meson \
		--prefix=/usr \
		--libexecdir=lib \
		-Dgst_debug=false \
		-Dgtk_doc=disabled \
		-Dnls=disabled \
		-Dpackage-name="GStreamer Good Plugins $version (rlxos)"
	ninja
	DESTDIR=$pkg ninja install
}
