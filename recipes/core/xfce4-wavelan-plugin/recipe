# Description: Display stats from a wireless lan interface
# URL: https://goodies.xfce.org/projects/panel-plugins/xfce4-wavelan-plugin
# Depends on: xfce4-panel glib libxfce4ui gtk3 pango harfbuzz atk cairo gdk-pixbuf libxfce4util

name=xfce4-wavelan-plugin
version=0.6.1
release=1
source="http://archive.xfce.org/src/panel-plugins/xfce4-wavelan-plugin/${version%.*}/xfce4-wavelan-plugin-$version.tar.bz2"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--disable-debug \
		--disable-nls
	make
	make DESTDIR=$pkg install
}
