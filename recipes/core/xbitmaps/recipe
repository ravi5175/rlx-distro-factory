# Description: X.org Bitmap files
# URL: http://xorg.freedesktop.org/

name=xbitmaps
version=1.1.2
release=1
source="http://ftp.x.org/pub/individual/data/xbitmaps-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static

	make DESTDIR=$pkg install
}

