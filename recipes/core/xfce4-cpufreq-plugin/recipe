# Description: CPU frequency plugin for the Xfce4 panel
# URL: https://goodies.xfce.org/projects/panel-plugins/xfce4-cpufreq-plugin
# Depends on: xfce4-panel glib libxfce4ui gtk3 pango harfbuzz atk cairo gdk-pixbuf libxfce4util

name=xfce4-cpufreq-plugin
version=1.2.2
release=1
source="http://archive.xfce.org/src/panel-plugins/xfce4-cpufreq-plugin/${version%.*}/xfce4-cpufreq-plugin-$version.tar.bz2"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--disable-debug \
		--disable-nls
	make
	make DESTDIR=$pkg install
}
